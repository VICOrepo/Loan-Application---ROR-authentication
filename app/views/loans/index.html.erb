<style>
 .card {
    box-shadow: 0 4px 8px rgba(41, 43, 41, 0.692); /* Adjust the values to your preference */
  }
</style>
<body >

    <div class="container-fluid mt-4">
      
      <% if @loans.any? %>
      <h1 class="text-center">Application Detail</h1>
      <br>
      <div class="card mb-5">
        <div class="card-body">
          <div class="table-responsive">
            <table id="loans-table" class="table table-bordered table-hover dataTable">
              <thead class="thead-dark">
                <tr>
                  <th class="text-center">Loan Purpose</th>
                  <th class="text-center">Loan Amount</th>
                  <th class="text-center">Applicant Name</th>
                  <th class="text-center">Date of Birth</th>
                  <th class="text-center">Email</th>
                  <th class="text-center">Actions</th>
                </tr>
              </thead>
              <tbody>
                <% @loans.each do |loan| %>
                  <tr>
                    <td><%= loan.purpose %></td>
                    <td><%= loan.amount %></td>
                    <td><%= "#{loan.name} #{loan.last_name}" %></td>
                    <td><%= loan.date_of_birth %></td>
                    <td><%= loan.email %></td>
                    <td class="d-flex justify-content-around">
                      <%= link_to 'Show', loan_path(loan), class: 'btn btn-info btn-sm' %>
                      <%= link_to 'Edit', edit_loan_path(loan), class: 'btn btn-warning btn-sm' %>

                      <% if current_user && current_user.has_role?(:admin) %>
                        <%= button_to 'Delete', loan_path(loan),
                                      method: :delete,
                                      onclick: "return confirm('Are you sure you want to delete this loan application?');",
                                      class: 'btn btn-danger btn-sm' %>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>

    <% else %>
      <div class="text-center <%= current_user&.admin? ? 'admin-message' : 'error-message' %>">
        <% if current_user&.admin? %>
          <p class="mb-3">Hello, <%= current_user.email.split('@').first %> ðŸŒŸ There are no records matching loan applications.</p>
          <p class="mb-3">Feel free to manage users and loans from the admin dashboard.</p>
          <%= link_to 'All Users Details', users_path, class: 'btn btn-success mr-2' %>
        <% else %>
          <p class="mb-3">Oops! ðŸ¤” It seems like there are no records matching your loan application.</p>
          <p class="mb-3">Don't worry, your financial journey is just a step away!</p>
          <p class="mb-3">Hit the button below to unlock a world of opportunities. Let's make it happen! ðŸš€</p>
          <%= link_to 'Explore Opportunities', new_loan_path, class: 'btn btn-success mr-3' %>
        <% end %>
        <div class="d-flex justify-content-end">
          <%= link_to 'Back', root_path, class: 'btn btn-dark mr-3' %>
        </div> 
      </div>
    <% end %>
  </div>
  <br/> 
   
  
  <br>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.25/css/jquery.dataTables.min.css">
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/buttons/1.7.1/css/buttons.dataTables.min.css">
<script src="https://cdn.datatables.net/1.10.25/js/jquery.dataTables.min.js"></script>
