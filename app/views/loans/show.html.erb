
<body style="background: linear-gradient(to right, #4CAF50, #c5e9c7);">
  
    <div class="container mt-5">
      <h1 class="text-center">User Details</h1>
    
      <div class="card mb-5">
        <div class="card-body">
          <div class="row mx-auto">
            <div class="col-md-6">
              <p class="card-text"><strong>Loan Purpose:</strong> <%= @loan.purpose %></p>
              <p class="card-text"><strong>Loan Amount:</strong> <%= @loan.amount %></p>
              <p class="card-text"><strong>First Name:</strong> <%= @loan.name %> </p>
              <p class="card-text"><strong>Middle Name:</strong> <%= @loan.middle_name %> </p>
              <p class="card-text"><strong>Last Name:</strong> <%= @loan.last_name %> </p>
              <p class="card-text"><strong>Date of Birth:</strong> <%= @loan.date_of_birth %> </p>
              <p class="card-text"><strong>Email:</strong> <%= @loan.email %></p>
              <p class="card-text"><strong>Phone Number:</strong> <%= @loan.phone_number %></p>
              <p class="card-text"><strong>Employer Name:</strong> <%= @loan.employer_name %></p>
              <p class="card-text"><strong>Employer Phone Number:</strong> <%= @loan.employer_phone %></p>
            </div>
  
            <div class="col-md-6">
              <p class="card-text"><strong>Home Phone Number:</strong> <%= @loan.home_number %> </p>
              <p class="card-text"><strong>SSN:</strong> <%= @loan.ssn %></p>
              <p class="card-text"><strong>Street Address 1:</strong> <%= @loan.address %></p>
              <p class="card-text"><strong>Street Address 2:</strong> <%= @loan.street_address2 %> </p>
              <p class="card-text"><strong>City:</strong> <%= @loan.city %> </p>
              <p class="card-text"><strong>State:</strong> <%= @loan.state %> </p>
              <p class="card-text"><strong>ZIP:</strong> <%= @loan.zip %> </p>
              <p class="card-text"><strong>Residence Type:</strong> <%= @loan.residence_type %> </p>
              <p class="card-text"><strong>Annual Income:</strong> <%= @loan.annual_income %></p>
            </div>
          </div>
          <br>
          <!-- Links and buttons -->
          <div class="d-flex justify-content-end">
            <div class="justify-content-around">
              <%= link_to 'Edit', edit_loan_path(@loan), class: 'btn btn-primary mr-2' %> 
              <%= link_to 'Back', loans_path, class: 'btn btn-dark mr-2' %>
            </div>
          </div>
          

          <!-- <% if user_signed_in? && current_user.admin? %>
            <div class="mt-3">
              <%= button_to 'Delete', loan_path(@loan), method: :delete, class: 'btn btn-danger',onclick: "return confirm('Are you sure you want to delete this loan application?');" %>
            </div>
          <% end %> -->
        </div>
      </div>
    </div>
    <footer class="footer mt-5 text-green">
      <div class="container">
        <div class="row">
          <div class="col-md-12 text-center">
            <p>&copy; 2024 Loan Application Portal</p>
            <p>Created by Viral</p>
          </div>
        </div>
      </div>
</footer>
  </body>
  
  